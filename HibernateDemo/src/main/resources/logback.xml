<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- to screen -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- screen output pattern -->
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [%F:%L] - %msg %n</pattern>
    </encoder>
  </appender>
 
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>